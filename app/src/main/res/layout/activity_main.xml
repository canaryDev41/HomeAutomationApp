<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ama_2.homeautomation.MainActivity">
<LinearLayout
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical"
    android:weightSum="5"
    android:layout_centerHorizontal="true"
    android:id="@+id/linearLayout">
<TextView
    android:layout_marginBottom="20dp"
    android:textSize="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:text="Remote control in all home appliances through our application"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="15dp"
        android:background="#eee" />

    <Switch
        android:padding="10dp"
        android:textSize="20dp"
        android:drawablePadding="5dp"
        android:drawableLeft="@drawable/ic_lightbulb_outline_black_24dp"
        android:layout_weight="1"
        android:id="@+id/switchLamb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="Lamb "
        tools:checked="false" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="15dp"
        android:background="#eee" />

    <Switch
        android:padding="10dp"
        android:textSize="20dp"
        android:drawablePadding="5dp"
        android:drawableLeft="@drawable/ic_all_out_black_24dp"
        android:layout_weight="2"
        android:id="@+id/switchFan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fan " />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="15dp"
        android:background="#eee" />

    <Switch
        android:padding="10dp"
        android:textSize="20dp"
        android:drawablePadding="5dp"
        android:drawableLeft="@drawable/ic_aspect_ratio_black_24dp"
        android:layout_weight="2"
        android:id="@+id/switchConditioning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Air conditioning" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="15dp"
        android:background="#eee" />

</LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:padding="10dp">

        <Button
            android:drawableTop="@drawable/ic_info_outline_black_24dp"
            android:paddingTop="25dp"
            android:id="@+id/btnAbout"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <Button
            android:drawableTop="@drawable/ic_power_settings_new_black_24dp"
            android:paddingTop="25dp"
            android:id="@+id/btnExit"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <Button
            android:drawableTop="@drawable/ic_settings_black_24dp"
            android:paddingTop="25dp"
            android:id="@+id/btnSettings"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"/>
    </LinearLayout>

</RelativeLayout>
